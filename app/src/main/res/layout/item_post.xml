<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="10dp"
    android:background="@drawable/custom_edittext"
    android:id="@+id/item"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >
    <TextView
        android:id="@+id/postTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:textStyle="bold"
        android:text="BAŞLIK"
        />

    <TextView
        android:id="@+id/postBodyTextView"
        android:layout_width="250dp"
        android:layout_height="35dp"

        android:layout_marginTop="8dp"
        android:text="asjaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaadnasdasömdsamdsadasasjaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaadnasdasömdsamdsadasdasjaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaadnasdasömdsamdsadasdd"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/postPerson"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:text="15 kişi"
                android:background="@drawable/custom_edittext"
                android:textColor="@color/black"
                android:paddingHorizontal="5dp"
                android:gravity="center"
                />


            <TextView
                android:id="@+id/postCity"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:text="Ankara"
                android:background="@drawable/custom_edittext"
                android:textColor="@color/black"
                android:paddingHorizontal="5dp"
                android:gravity="center"
                />

        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@color/black"
        android:id="@+id/miniImage"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>