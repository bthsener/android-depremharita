<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".AddPostFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/firstLinear"
        app:layout_constraintTop_toTopOf="parent"
        android:weightSum="2"
        >

        <Button
            android:id="@+id/fragmentGetLOcationBtn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Lokasyonu Al"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="2dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="350dp"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/fragmentSendPostBtn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="350dp"
            android:padding="2dp"
            android:text="Kaydet"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_weight="1"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/firstLinear"
        >

        <androidx.fragment.app.FragmentContainerView
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:layout_marginTop="20dp"
            android:id="@+id/MiniMapFragment"
            android:name="com.google.android.gms.maps.SupportMapFragment">
    </androidx.fragment.app.FragmentContainerView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>